{
    "name": "@truffle-ai/saiki",
    "version": "0.2.1",
    "description": "Your command center for controlling computers and services with natural language - connect once, command everything",
    "type": "module",
    "main": "dist/src/core/index.cjs",
    "module": "dist/src/core/index.js",
    "types": "dist/src/core/index.d.ts",
    "bin": {
        "saiki": "./dist/src/app/index.js"
    },
    "exports": {
        ".": {
            "types": "./dist/src/core/index.d.ts",
            "import": "./dist/src/core/index.js",
            "require": "./dist/src/core/index.cjs"
        },
        "./package.json": "./package.json"
    },
    "scripts": {
        "clean": "npx rimraf dist",
        "prebuild": "",
        "build": "npm run clean && tsup src/core/index.ts --format esm,cjs --shims --dts --out-dir dist/src/core && tsup src/app/index.ts --format esm --shims --out-dir dist/src/app && npm run copy-client",
        "prepare": "husky",
        "copy-client": "npx rimraf public && mkdir public && npx copyfiles -f \"src/app/web/client/*\" public",
        "start": "node dist/src/app/index.js",
        "dev": "tsc --watch",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\" \"app/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\" \"app/**/*.ts\"",
        "test": "vitest run",
        "test:ci": "vitest run --coverage",
        "test:watch": "vitest watch"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "ai",
        "cli",
        "natural-language",
        "openai",
        "truffle-ai"
    ],
    "author": "",
    "license": "Elastic-2.0",
    "files": [
        "dist/",
        "configuration/saiki.yml",
        "public/"
    ],
    "dependencies": {
        "@ai-sdk/anthropic": "^1.2.2",
        "@ai-sdk/google": "^1.2.8",
        "@ai-sdk/openai": "^1.3.3",
        "@anthropic-ai/sdk": "^0.39.0",
        "@modelcontextprotocol/sdk": "^1.11.0",
        "ai": "^4.2.6",
        "boxen": "^7.1.1",
        "chalk": "^5.4.1",
        "commander": "^11.1.0",
        "copyfiles": "^2.4.1",
        "discord.js": "^14.19.3",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "marked": "^15.0.8",
        "node-telegram-bot-api": "^0.66.0",
        "openai": "^4.89.0",
        "ora": "^7.0.1",
        "puppeteer-core": "^24.4.0",
        "readline-sync": "^1.4.10",
        "rimraf": "^6.0.1",
        "tiktoken": "^1.0.21",
        "typescript": "^5.3.3",
        "winston": "^3.17.0",
        "ws": "^8.18.1",
        "yaml": "^2.7.1",
        "zod": "^3.24.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "@types/express": "^4.17.21",
        "@types/node": "^20.17.36",
        "@types/readline-sync": "^1.4.8",
        "@typescript-eslint/eslint-plugin": "^8.28.0",
        "@typescript-eslint/parser": "^8.28.0",
        "@vitest/coverage-v8": "^3.1.3",
        "eslint": "^9.23.0",
        "eslint-config-prettier": "^10.1.1",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.1",
        "prettier": "^3.5.3",
        "supertest": "^7.1.0",
        "ts-node": "^10.9.2",
        "tsup": "^8.4.0",
        "vitest": "^3.1.3"
    },
    "lint-staged": {
        "*.ts": [
            "prettier --write"
        ]
    }
}
