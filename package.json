{
    "name": "@truffle-ai/saiki",
    "version": "0.2.1",
    "description": "Your command center for controlling computers and services with natural language - connect once, command everything",
    "type": "module",
    "main": "dist/app/index.js",
    "bin": {
        "saiki": "./dist/app/index.js"
    },
    "scripts": {
        "clean": "npx rimraf dist",
        "prebuild": "",
        "build": "npm run clean && npx tsc && npm run copy-client",
        "prepare": "npm run build",
        "copy-client": "npx rimraf public && mkdir public && npx copyfiles -f \"app/web/client/*\" public",
        "start": "node dist/app/index.js",
        "dev": "tsc --watch",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\" \"app/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\" \"app/**/*.ts\""
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "ai",
        "cli",
        "natural-language",
        "openai",
        "truffle-ai"
    ],
    "author": "",
    "license": "Elastic-2.0",
    "files": [
        "dist/",
        "configuration/saiki.yml",
        "public/"
    ],
    "dependencies": {
        "@ai-sdk/anthropic": "^1.2.2",
        "@ai-sdk/google": "^1.2.8",
        "@ai-sdk/openai": "^1.3.3",
        "@anthropic-ai/sdk": "^0.39.0",
        "@modelcontextprotocol/sdk": "^1.7.0",
        "ai": "^4.2.6",
        "boxen": "^7.1.1",
        "chalk": "^5.4.1",
        "commander": "^11.1.0",
        "copyfiles": "^2.4.1",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "marked": "^15.0.8",
        "openai": "^4.89.0",
        "ora": "^7.0.1",
        "puppeteer-core": "^24.4.0",
        "readline-sync": "^1.4.10",
        "rimraf": "^6.0.1",
        "tiktoken": "^1.0.20",
        "typescript": "^5.3.3",
        "winston": "^3.17.0",
        "ws": "^8.18.1",
        "yaml": "^2.7.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.5",
        "@types/readline-sync": "^1.4.8",
        "@typescript-eslint/eslint-plugin": "^8.28.0",
        "@typescript-eslint/parser": "^8.28.0",
        "eslint": "^9.23.0",
        "eslint-config-prettier": "^10.1.1",
        "prettier": "^3.5.3",
        "ts-node": "^10.9.2"
    }
}
